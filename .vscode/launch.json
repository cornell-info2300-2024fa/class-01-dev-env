{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "PHP Development Server",
      "type": "php",
      "request": "launch",
      "runtimeArgs": [
        "-c", "${workspaceRoot}/.devcontainer/php.ini",
        "-S",
        "127.0.0.1:8080",
        "router.php"
      ],
      "cwd": "${workspaceRoot}",
      "port": 9000,
      "serverReadyAction": {
        "pattern": "Development Server \\(http://127.0.0.1:([0-9]+)\\) started",
        "uriFormat": "http://127.0.0.1:%s",
        "action": "openExternally"
      }
    }
  ]
}
